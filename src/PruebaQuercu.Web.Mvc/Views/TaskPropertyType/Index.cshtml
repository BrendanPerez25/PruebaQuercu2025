@using PruebaQuercu.Web.Startup
@using PruebaQuercu.Web.Models.PropertyType
@model TaskPropertyTypeViewModel

@{
    ViewBag.Title = L("TaskPropertyType");
    ViewBag.CurrentPageName = PageNames.PropertyType;

}


<div class="card-body">
    <div class="table-responsive">
        <table id="UsersTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@L("ID")</th>
                    <th>@L("Description")</th>
                    <th>@L("Edit")</th>
                    <th>@L("Delete")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var taskPropertyTypeDto in Model.TaskPropertyType)
                {
                    <tr>
                        <td>@taskPropertyTypeDto.Id</td>
                        <td>@taskPropertyTypeDto.Description</td>
                            <!-- Aquí puedes poner un botón de acción si quieres -->
                        <td>
                            <a href="@Url.Action("Edit", "TaskPropertyType", new { id = taskPropertyTypeDto.Id })" class="btn btn-sm btn-primary">Editar</a>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-controller="TaskPropertyType" method="post" style="display:inline;"
                                  onsubmit="return confirm('¿Estás seguro de que deseas eliminar este tipo de propiedad?');">
                                <input type="hidden" name="id" value="@taskPropertyTypeDto.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                            </form>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

