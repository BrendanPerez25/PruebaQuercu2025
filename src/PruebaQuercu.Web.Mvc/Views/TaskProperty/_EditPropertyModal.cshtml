@model PruebaQuercu.Property.Dto.EditTaskPropertyDto

<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="EditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form method="post" asp-action="Edit">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditModalLabel">Editar Propiedad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Number)
                        @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Number)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address)
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Address)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Area)
                        @Html.TextBoxFor(m => m.Area, new { @class = "form-control", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(m => m.Area)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConstructionArea)
                        @Html.TextBoxFor(m => m.ConstructionArea, new { @class = "form-control", type = "number", step = "0.01" })
                        @Html.ValidationMessageFor(m => m.ConstructionArea)
                    </div>
                    <div class="form-group">
                        @Html.Label("Tipo de Propiedad")
                        @Html.DropDownListFor(m => m.PropertyTypeId, ViewBag.PropertyTypes as SelectList, "Seleccione", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Propietario")
                        @Html.DropDownListFor(m => m.OwnerId, ViewBag.Owners as SelectList, "Seleccione", new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
